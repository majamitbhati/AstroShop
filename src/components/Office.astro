---
import { Image } from "astro:assets";
import { getEntryBySlug, type CollectionEntry } from "astro:content";
// import myImage from "../content/images/photoshoot.jpg";

type Props = {
    office: CollectionEntry<"offices">;
};

const { office } = Astro.props;
---


<div class="w-[300px] inline-block m-4 rounded-xl">
    <a href={`/unit/${office.slug}`}>
        <div class="">
            <div>
                <Image
                        src={office.data.image}
                        width={400}
                        height={600 / 1.5}
                        alt={office.data.title}
                        class="aspect-thumbnail object-cover"
                        format="webp"
                    />
                
            </div>
            <div class="bg-slate-100 px-3 py-5">
                <h2>{office.data.title}</h2>
                <h2>Size: {office.data.size} sq ft</h2>
                <h2>Floor: {office.data.floor}</h2>
                <h2>Atrium Facing: {office.data.atrium ? "yes" : "no"}</h2>
                <h2>Price plan: {office.data.price}</h2>
                <h2>Category: {office.data.category}</h2>
            </div>
        </div>
    </a>
</div>

