<form action="" method="post" name="tibnform" id="tibnform">
  <div class="space-y-12 p-8 shadow-lg">
    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-2xl font-semibold leading-7 text-gray-900 text-center">
        Enquire Now
      </h2>
      <p class="mt-1 text-sm leading-6 text-gray-600"></p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-6">
          <label
            for="first-name"
            class="block text-sm font-medium leading-6 text-gray-900"
            >Name</label
          >
          <div class="">
            <input
              type="text"
              name="name"
              required 
              minlength="3" 
              maxlength="20"
              id="first-name"
              autocomplete="given-name"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#E4B300] sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-6">
          <label
            for="phone"
            class="block text-sm font-medium leading-6 text-gray-900"
            >Phone</label
          >
          <div class="">
            <input
              type="tel"
              name="number"
              required 
              min="10" 
              max="12" 
              pattern="[0-9]{10}"
              id="phone"
              autocomplete="family-name"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#E4B300] sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-6">
          <label
            for="email"
            class="block text-sm font-medium leading-6 text-gray-900"
            >Email</label
          >
          <div class="">
            <input
              id="email"
              name="email"
              type="email"
              pattern="[^ @]*@[^ @]*" 
              size="30"
              autocomplete="email"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#E4B300] sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-6">
          <label
            for="Message"
            class="block text-sm font-medium leading-6 text-gray-900"
            >Message</label
          >
          <div class="">
            <textarea
              name="message"
              id="message"
              maxlength="100"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#E4B300] sm:text-sm sm:leading-6"
            ></textarea>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-6 flex items-center justify-end gap-x-6">
      <button
        type="button"
        class="text-sm font-semibold leading-6 text-gray-900">Cancel</button
      >
      <button
        type="submit"
        class="rounded-md bg-[#E4B300] px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[#E4B300] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#E4B300]"
        >Save</button
      >
    </div>
  </div>

