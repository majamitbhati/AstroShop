---
import { Image } from "astro:assets";
import { getEntryBySlug, type CollectionEntry } from "astro:content";
import ResaleType from "./ResaleType.astro";
import Price from "./Price.astro";
import EnquireNow from "./EnquireNow.astro";
import Facilities from "./Facilities.astro";

type Props = {
    food: CollectionEntry<"foods">;
};
const { food } = Astro.props;
---

<div class="w-[318px] inline-block m-4 rounded-lg border-2 border-slate-200 pb-8">
    <a href={`/unit/${food.slug}`}>
        <div class="">
            <div>
                <ResaleType />
            </div>
            <div>
                <Image
                    src={food.data.image}
                    width={400}
                    height={600 / 1.5}
                    alt={food.data.title}
                    class="aspect-thumbnail object-cover"
                    format="webp"
                />
                <Price price={food.data.price} />
            </div>
            <Facilities 
            size={food.data.size} 
            floor={food.data.floor} 
            discount={food.data.discount} 
            atrium={food.data.atrium} />
            <p class="mx-3 my-3"><strong>Details: -</strong>{food.data.title}</p>
            <EnquireNow />
        </div>
    </a>
</div>
