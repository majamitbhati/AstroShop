---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import Shoplist from "../components/Shoplist.astro";
import { getCollection } from "astro:content";
import Menu from "../components/Menu.astro";
import Slider from "../components/Slider.astro";
import About from "../components/About.astro";
import MiniSlider from "../components/MiniSlider.astro";
import Overview from "../components/Overview.astro";
import Form from "../components/Form.astro";
import InvestmentOptions from "../components/InvestmentOptions.astro";
import MainHeading from "../components/MainHeading.astro";


const shops = await getCollection("shops");
---

<Layout title="Trehan Iris Broadway Greno West">
	<Slider />
	<Menu />
	<div class="flex">
		<About />
		<MiniSlider />
	</div>
	<div class="flex">
		<Overview />
		<Form />
	</div>
	<InvestmentOptions />
	<div class="shop mx-16 py-16">
		<MainHeading heading="Resale Shops in Trehan Iris Broadway Greno West"/>
		<div class="flex justify-center">
			<Shoplist shops={shops} />
		</div>
	</div>
</Layout>
